doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(
            name='viewport'
            content='width=device-width, initial-scale=1.0, minimum-scale=1.0'
        )
        meta(
            name='description'
            content='Author: Vu Chuc, Content: Heatmap'
        )
        link(
            rel='icon'
            href='/icons/heat-map-icon-25.ico'
        )
        case page
            when 'login'
                title Login.
            when 'register'
                title Register
            default
                title Heatmap.
        link(
            rel='stylesheet'
            href='/css/style.css'
        )
    body
        case page
            when 'login'
                include includes/login
            when 'register'
                include includes/register
            default
                div#main-container-01.main-container
                    div#status-container
                        h1 This app is in development.