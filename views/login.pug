#main-container-02.main-container
    .login-block
        include notification
        form(
            action='/user/login'
            method='post'
        )
            label(for='user-name') User name
            input#user-name(
                type='text'
                name='username'
                autocomplete='off'
                required
            )
            label(for='password') Password
            input#password(
                type='password'
                name='password'
                autocomplete='off'
                required
            )
            input#submit(
                type='submit'
                value='Login'
            )
            a(href='/user/register') Registration Page